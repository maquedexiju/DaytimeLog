<Log>:
  title:title
  logAll:log_all
  scrollView:scroll_view
  LogScrollView:
    id:scroll_view
    do_scroll_y:True
    do_scroll_x:False
    size:self.parent.size
    size_hint:None,None
    pos:0,0
    bar_width:dp(5)
    StackLayout:
      id:log_all
      orientation:'lr-tb'
      size_hint:None,None
      size:self.parent.width,0
      pos:0+self.parent.x,self.parent.height-self.height+self.parent.y
  DayTitle:
    id:title
    pos:0,self.parent.height-dp(30)

<LogOneDay>:
  size_hint:None,None
  title:title
  log:log
  #addRecord:add_record
  orientation:'lr-tb'
  #width:self.parent.width
  size_hint:None,None
  DayTitle:
    id:title
    #pos:0,self.parent.height-dp(30)
  StackLayout:
    id:log
    size_hint:None,None
    width:self.parent.width
    height:dp(72)
    orientation:'lr-tb'
    #pos:0,dp(72)
  #AddRecord:
  #  id:add_record

<DayTitle@RelativeLayout>:
  date:date
  edit:edit
  size:self.parent.width,dp(30)
  size_hint:None,None
  canvas:
    Color:
      rgba:0.97,0.97,0.97,1
    Rectangle:
      size:self.size
      pos:0,0
  Label:
    id:date
    size:self.parent.width-dp(12),self.parent.height
    size_hint:None,None
    text_size:self.size
    valign:'middle'
    halign:'left'
    font_size:'12sp'
    color:0.5,0.5,0.5,1
    text:'20170627'
    pos:dp(12),0
  Button:
    id:edit
    size:dp(46),dp(30)
    size_hint:None,None
    pos:self.parent.width-dp(46),0
    background_normal:''
    background_color:1,1,1,0
    font_size:'12sp'
    color:0,0,0,1
    text:'Edit'
  RelativeLayout:
    canvas:
      Color:
        rgba:0.5,0.5,0.5,1
      Line:
        points:0,1,self.width,1
        width:1
      Line:
        points:0,self.height+1,self.width,self.height+1
        width:1

<Record>:
  time:time
  duration:duration
  job:job
  insert:insert
  delete:delete
  height:dp(72)
  size_hint:None,None
  canvas:
    Color:
      rgba:1,1,1,1
    Rectangle:
      size:self.size
      pos:0,0
  TimeInput:
    id:time
    size:dp(80),dp(36)
    size_hint:None,None
    pos:0,dp(36)
    padding:dp(24),dp(12),dp(6),dp(12)
    background_color:1,1,1,0
    hint_text:'Start at'
  ImageButton:
    size:dp(24),dp(24)
    size_hint:None,None
    pos:0,dp(42)
    background_normal:'includes/icons/Time.png'
  DurationInput:
    id:duration
    size:dp(80),dp(36)
    size_hint:None,None
    pos:0,0
    padding:dp(24),dp(12),dp(6),dp(12)
    background_color:1,1,1,0
    hint_text:'Duration'
  ImageButton:
    size:dp(24),dp(24)
    size_hint:None,None
    pos:0,dp(6)
    background_normal:'includes/icons/Duration.png'
  JobInput:
    id:job
    size:self.parent.width-dp(80),dp(72)
    size_hint:None,None
    pos:dp(80),0
    padding:dp(12),dp(12),dp(12),dp(6)
    background_color:1,1,1,0
    multiline:True
    line_space:'4sp'
    hint_text:'Tag: Job'
    auto_indent:True
  RelativeLayout:
    size:self.parent.size
    pos:0,0
    canvas:
      Color:
        rgba:0.5,0.5,0.5,1
      Line:
        points:0,1,self.width,1
        width:1
      Line:
        points:0,dp(36),dp(80),dp(36)
        width:1
      Line:
        points:dp(80),1,dp(80),self.height
        width:1
  ImageButton:
    id:insert
    size:dp(24),dp(24)
    size_hint:None,None
    pos:self.parent.width-dp(30)+self.parent.width*3,dp(42)
    background_normal:'includes/icons/Insert.png'
    on_press:self.parent.parent.parent.Insert(int(self.parent.id))
  ImageButton:
    id:delete
    size:dp(24),dp(24)
    size_hint:None,None
    pos:self.parent.width-dp(30)+self.parent.width*3,dp(6)
    background_normal:'includes/icons/Delete.png'
    on_press:self.parent.parent.parent.Remove(int(self.parent.id))

<AddRecord>:
  btn:add_record
  height:dp(72)
  size_hint:None,None
  canvas:
    Color:
      rgba:1,1,1,1
    Rectangle:
      pos:0,0
      size:self.size
  ImageButton:
    size:dp(36),dp(36)
    size_hint:None,None
    center:self.parent.width/2,self.parent.height/2
    background_normal:'includes/icons/Add.png'
  Button:
    id:add_record
    background_color:1,1,1,0
    #on_press:self.parent.parent.AddNewLog()
  Widget:
    size:self.parent.size
    pos:0,0
    canvas:
      Color:
        rgba:0.5,0.5,0.5,1
      Line:
        points:0,1,self.width,1
        width:1

<LogEmpty>:
