<Timer>:
  tips:tips
  timeSet:time_set
  timeSetMask:time_set_mask
  clock:clock
  start:start
  pause:pause
  stop:stop
  lastTimer:last_timer
  size:self.parent.width,dp(250)
  size_hint:None,None
  canvas:
    Color:
      rgba:0.97,0.36,0.29,1
    Rectangle:
      size:self.size
      pos:0,0
  Label:
    id:tips
    text:"Set time in minute"
    font_size:"18sp"
    size:dp(200),dp(18)
    size_hint:None,None
    text_size:self.size
    halign:"center"
    center:self.parent.width/2,self.parent.height-dp(27)
  Label:
    id:last_timer
    text:'Last timer started at -:-'
    font_size:'14sp'
    size:self.parent.width,dp(14)
    size_hint:None,None
    text_size:self.size
    halign:'center'
    center:self.parent.width/2,self.parent.height-dp(50)
  TextInput:
    id:time_set
    text:"30"
    size:dp(120),dp(120)
    size_hint:None,None
    font_size:"72sp"
    padding:0,dp(24),0,dp(24)
    pos:self.parent.width/2-self.width/2+self.parent.width*3,dp(-65)
    multiline:False
    opacity:0
    #pos:self.parent.width/2-self.width/2,130
  Button:
    id:time_set_mask
    text:'30'
    size:dp(120),dp(120)
    size_hint:None,None
    font_size:'81sp'
    underline:True
    pos:self.parent.width/2-self.width/2,dp(70)
    background_color:0,0,0,0
  Label:
    id:clock
    text:"30"
    font_size:"81sp"
    color:1,1,1,1
    size:self.parent.width,dp(120)
    size_hint:None,None
    text_size:self.size
    halign:"center"
    valign:"middle"
    pos:0,dp(65)
    opacity:0
  ImageButton:
    id:start
    background_normal:'includes/icons/Start.png'
    size:dp(36),dp(36)
    size_hint:None,None
    pos:self.parent.width/2-self.width/2,dp(16)
  ImageButton:
    id:pause
    background_normal:'includes/icons/Pause.png'
    size:dp(36),dp(36)
    size_hint:None,None
    pos:self.parent.width/2-self.width-5+self.parent.width*3,dp(16)
  ImageButton:
    id:stop
    background_normal:'includes/icons/Stop.png'
    size:dp(36),dp(36)
    size_hint:None,None
    pos:self.parent.width/2+5+self.parent.width*3,dp(16)
