<MenuLine>:
  icon:icon
  title:title
  operation:operation
  size:dp(150),dp(36)
  size_hint:None,None
  canvas:
    Color:
      rgba:1,1,1,1
    Rectangle:
      size:self.size
      pos:0,0
  Widget:
    size:self.parent.size
    canvas:
      Color:
        rgba:0.5,0.5,0.5,1
      Line:
        points:0,0,self.width,0,self.width,self.height,0,self.height,0,0
        width:1
  ImageButton:
    id:icon
    size:dp(36),dp(36)
    size_hint:None,None
    background_normal:'includes/icons/Save.png'
    pos:dp(7),0
  Label:
    id:title
    size:dp(100),dp(36)
    size_hint:None,None
    text_size:self.size
    pos:dp(50),0
    text:'Save'
    font_size:'14sp'
    color:0,0,0,1
    valign:'middle'
    halign:'left'
  Button:
    id:operation
    size:self.parent.size
    pos:0,0
    background_color:0,0,0,0

<Menu>:
  more:more
  done:done
  mask:mask
  Button:
    id:mask
    size:self.parent.parent.size
    size_hint:None,None
    background_color:1,1,1,0
    on_press:self.parent.Close()
  ImageButton:
    id:more
    size:dp(36),dp(36)
    size_hint:None,None
    background_normal:'includes/icons/More.png'
  ImageButton:
    id:done
    size:dp(36),dp(36)
    size_hint:None,None
    background_normal:'includes/icons/Done.png'
    x:self.parent.parent.width*3
    on_press:self.parent.LeaveEdit()
