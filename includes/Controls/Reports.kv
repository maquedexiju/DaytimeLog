<Reports>:
  reports:reports
  do_scroll_y:True
  do_scroll_x:False
  size_hint:None,None
  StackLayout:
    id:reports
    orientation:'lr-tb'
    width:self.parent.width
    size_hint:None,None
    pos:0,self.parent.height-self.height

<ReportOneLine>:
  tag:tag
  time:time
  btn:btn
  size_hint:None,None
  RelativeLayout:
    size:self.parent.width,dp(54)
    size_hint:None,None
    canvas:
      Color:
        rgba:1,1,1,1
      Rectangle:
        size:self.size
        pos:0,0
    Label:
      id:tag
      pos:0,0
      size:self.parent.width-dp(108),dp(54)
      size_hint:None,None
      text_size:self.size
      valign:'top'
      halign:'left'
      padding:dp(12),dp(20)
      text:'Workiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiing'
      is_shortened:True
      max_lines:0
      font_size:'14sp'
      font_name:'includes/fzltqh.ttf'
      color:0.97,0.36,0.29,1
      bold:True
    Label:
      id:time
      size:dp(54),dp(54)
      size_hint:None,None
      pos:self.parent.width-dp(108),0
      text_size:self.size
      valign:'middle'
      halign:'right'
      text:'9.99H'
      font_size:'14sp'
      color:0.5,0.5,0.5,1
    ToggleButton:
      id:btn
      background_normal:'includes/icons/Expand.png'
      background_down:'includes/icons/Close.png'
      size:dp(54),dp(54)
      size_hint:None,None
      pos:self.parent.width-dp(54),0
    RelativeLayout:
      canvas:
        Color:
          rgba:0.5,0.5,0.5,1
        Line:
          points:0,1,self.width,1
          width:1
        Line:
          points:0,self.height,self.width,self.height
          width:1

<Jobs>:
  jobContent:job_content
  time:time
  #height:self.jobContent.height+dp(20)#dp(36)
  size_hint:None,None
  canvas:
    Color:
      rgba:0.97,0.97,0.97,1
    Rectangle:
      size:self.size
      pos:0,0
  Label:
    id:job_content
    pos:dp(24),dp(8)
    size:self.texture_size#self.parent.width-dp(120),dp(42)
    size_hint:None,None
    text_size:self.parent.width-dp(120),None
    valign:'top'
    halign:'left'
    padding:dp(12),dp(0)
    line_height:1.25
    text:'something a b c d e f g h i j k l m n o p q r s t u v w x y z'
    #is_shortened:True
    #max_lines:1
    font_size:'12sp'
    font_name:'includes/fzltqh.ttf'
    color:0.5,0.5,0.5,1
  Label:
    id:time
    size:dp(36),dp(36)
    size_hint:None,None
    pos:self.parent.width-dp(90),self.parent.height-dp(36)
    text_size:self.size
    valign:'middle'
    halign:'right'
    text:'9.99H'
    font_size:'12sp'
    color:0.5,0.5,0.5,1
  RelativeLayout:
    size:self.parent.size
    size_hint:None,None
    pos:0,0
    canvas:
      Color:
        rgba:0.5,0.5,0.5,1
      Line:
        points:dp(36),self.height+1,self.width-dp(12),self.height+1
        width:1
  RelativeLayout:
    size:dp(24),self.parent.height
    size_hint:None,None
    pos:0,0
    canvas:
      Color:
        rgba:0.97,0.36,0.29,1
      Rectangle:
        pos:0,0
        size:self.size
