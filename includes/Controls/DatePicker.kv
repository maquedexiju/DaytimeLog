<Dates>:
  yearInput:year_input
  monthInput:month_input
  startTimeInput:start_time_input
  endTimeInput:end_time_input
  canlerderDays:canlender_days
  mask:mask
  confirm:confirm
  yesterday:yesterday
  lastWeek:last_week
  thisWeek:this_week
  size:self.parent.width-dp(24),dp(480)
  size_hint:None,None
  Button:
    id:mask
    background_normal:''
    background_down:''
    background_color:1,1,1,1
  RelativeLayout:
    size:self.parent.width,dp(46)
    size_hint:None,None
    pos:0,self.parent.height-dp(46)
    YearInput:
      id:year_input
      size:dp(40),dp(20)
      size_hint:None,None
      pos:self.parent.width/2-dp(40),dp(12)
      hint_text:''
      multiline:False
      font_size:'18sp'
      padding:0,0,0,0
      background_normal:'includes/icons/BaseLine.png'
      border:4,1,0,1
    MonthInput:
      id:month_input
      size:dp(20),dp(20)
      size_hint:None,None
      pos:self.parent.width/2+dp(20),dp(12)
      hint_text:''
      multiline:False
      font_size:'18sp'
      padding:0,0,0,0
      background_normal:'includes/icons/BaseLine.png'
      border:4,1,0,1
    Label:
      size:dp(20),dp(20)
      size_hint:None,None
      text_size:self.size
      pos:self.parent.width/2,dp(12)
      halign:'center'
      text:'-'
      font_size:'18sp'
      color:0,0,0,1
  CanlenderTitle:
    pos:0,self.parent.height-dp(82)
  RelativeLayout:
    id:canlender_days
    pos:0,self.parent.height-dp(262)
    size:self.parent.width,dp(180)
    size_hint:None,None
  RelativeLayout:
    pos:0,self.parent.height-dp(298)
    size:self.parent.width,dp(36)
    size_hint:None,None
    Button:
      size:dp(80),dp(36)
      size_hint:None,None
      pos:0,0
      text:'Start'
      font_size:'14sp'
      color:0,0,0,1
      background_color:0.95,0.95,0.95,1
      background_normal:''
      background_down:''
    StartTimeInput:
      id:start_time_input
      size:self.parent.width-dp(80),dp(36)
      size_hint:None,None
      pos:dp(80),0
      font_size:'14sp'
      multiline:False
      padding:dp(12),dp(11),0,0
      hint_text:'Select above or type in "YYYY-MM-DD"'
      background_normal:'includes/icons/InputNormal.png'
      background_active:'includes/icons/InputActive.png'
    RelativeLayout:
      canvas:
        Color:
          rgba:0.5,0.5,0.5,1
        Line:
          points:0,-1,self.parent.width,-1
          width:1
        Line:
          points:0,self.parent.height,self.parent.width,self.parent.height
          width:1
        Line:
          points:dp(80),0,dp(80),self.parent.height
          width:1
  RelativeLayout:
    pos:0,self.parent.height-dp(334)
    size:self.parent.width,dp(36)
    size_hint:None,None
    Button:
      size:dp(80),dp(36)
      size_hint:None,None
      pos:0,0
      text:'End'
      font_size:'14sp'
      color:0,0,0,1
      background_color:0.95,0.95,0.95,1
      background_normal:''
      background_down:''
    EndTimeInput:
      id:end_time_input
      size:self.parent.width-dp(80),dp(36)
      size_hint:None,None
      pos:dp(80),0
      font_size:'14sp'
      multiline:False
      padding:dp(12),dp(11),0,0
      hint_text:'Select above or type in "YYYY-MM-DD"'
      background_normal:'includes/icons/InputNormal.png'
      background_active:'includes/icons/InputActive.png'
    RelativeLayout:
      canvas:
        Color:
          rgba:0.5,0.5,0.5,1
        Line:
          points:0,-1,self.parent.width,-1
          width:1
        Line:
          points:0,self.parent.height,self.parent.width,self.parent.height
          width:1
        Line:
          points:dp(80),0,dp(80),self.parent.height
          width:1
  Button:
    id:confirm
    size:self.parent.width,dp(36)
    size_hint:None,None
    pos:0,self.parent.height-dp(382)
    text:'Confirm'
    font_size:'14sp'
    background_normal:'includes/icons/ToggleDown.png'
  RelativeLayout:
    size:self.parent.width,dp(93)
    size_hint:None,None
    pos:0,0
    Label:
      size:self.parent.width-dp(28),dp(14)
      size_hint:None,None
      pos:dp(12),self.parent.height-dp(30)
      text_size:self.size
      valign:'middle'
      halign:'left'
      text:'Frequently Used'
      color:0,0,0,1
      font_size:'14sp'
    StackLayout:
      size:self.parent.width-dp(24),self.parent.height-dp(42)
      size_hint:None,None
      pos:dp(12),0
      spacing:dp(4),dp(4)
      orientation:'lr-tb'
      ToggleButton:
        id:yesterday
        size:dp(100),dp(36)
        size_hint:None,None
        text:'Yesterday'
        color:0,0,0,1
        background_normal:'includes/icons/ToggleNormal.png'
        background_down:'includes/icons/ToggleDown.png'
        border:4,4,4,4
        group:'FrequentlyUsed'
      ToggleButton:
        id:last_week
        size:dp(100),dp(36)
        size_hint:None,None
        text:'Last Week'
        color:0,0,0,1
        background_normal:'includes/icons/ToggleNormal.png'
        background_down:'includes/icons/ToggleDown.png'
        border:4,4,4,4
        group:'FrequentlyUsed'
      ToggleButton:
        id:this_week
        size:dp(100),dp(36)
        size_hint:None,None
        text:'This Week'
        color:0,0,0,1
        background_normal:'includes/icons/ToggleNormal.png'
        background_down:'includes/icons/ToggleDown.png'
        border:4,4,4,4
        group:'FrequentlyUsed'

<DatePicker>:
  result:result
  picker:picker
  prevRange:prev_range
  nextRange:next_range
  mask:mask
  size:self.parent.width,dp(54)
  size_hint:None,None
  canvas:
    Color:
      rgba:1,1,1,1
    Rectangle:
      pos:0,0
      size:self.size
  Button:
    id:result
    size:self.parent.width-dp(108),self.parent.height
    size_hint:None,None
    pos:dp(54),0
    background_color:1,1,1,1
    background_normal:''
    text:'2017-06-12 To 2017-06-18'
    color:0,0,0,1
    font_size:'18sp'
    on_press:self.parent.OpenDates()
  ImageButton:
    id:prev_range
    size:dp(54),dp(54)
    size_hint:None,None
    background_normal:'includes/icons/Prev.png'
    pos:0,0
  ImageButton:
    id:next_range
    size:dp(54),dp(54)
    size_hint:None,None
    background_normal:'includes/icons/Next.png'
    pos:self.parent.width-dp(54),0
  Button:
    id:mask
    background_color:0,0,0,0.6
    size:self.parent.parent.size
    size_hint:None,None
    on_release:self.parent.CloseDates()
  Dates:
    id:picker
    #pos:0,-dp(45)

<OneDay>
  day:txt
  #height:dp(36)
  size_hint:None,None
  ToggleButton:
    id:txt
    size:dp(28),dp(28)
    size_hint:None,None
    center:self.parent.width/2,self.parent.height/2
    text:'DAY'
    font_size:'14sp'
    color:0,0,0,1
    disabled_color:0.8,0.8,0.8,1
    background_down:'includes/icons/ToggleDown.png'
    background_normal:''
    background_disabled_normal:''
    on_release:self.parent.Checked(self)

<CanlenderTitle@RelativeLayout>:
  size:self.parent.width,dp(36)
  size_hint:None,None
  canvas:
    Color:
      rgba:0.95,0.95,0.95,1
    Rectangle:
      pos:0,0
      size:self.size
  WeekDay:
    pos:0,0
    text:'MON'
  WeekDay:
    pos:self.parent.width/7*1,0
    text:'TUE'
  WeekDay:
    pos:self.parent.width/7*2,0
    text:'WED'
  WeekDay:
    pos:self.parent.width/7*3,0
    text:'THU'
  WeekDay:
    pos:self.parent.width/7*4,0
    text:'FRI'
  WeekDay:
    pos:self.parent.width/7*5,0
    text:'SAT'
  WeekDay:
    pos:self.parent.width/7*6,0
    text:'SUN'

<WeekDay@Label>:
  size:self.parent.width/7,dp(36)
  size_hint:None,None
  text_size:self.size
  halign:'center'
  valign:'middle'
  font_size:'14sp'
  color:0,0,0,1
