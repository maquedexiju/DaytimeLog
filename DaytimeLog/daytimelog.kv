<Timer>:
  timeSet:time_set
  oper:oper
  TextInput:
    id:time_set
    hint_text:"set time in minute"
    size:300,56
    pos:self.parent.x-200,self.parent.y
  Button:
    id:oper
    text:"Start"
    size:100,56
    pos:self.parent.x+100,self.parent.y
    on_press:self.parent.StartTimer(*args)

<Date>:
  year:year
  month:month
  day:day
  preBtn:preBtn
  nexBtn:nexBtn
  Button:
    id:preBtn
    text:"Prev"
    pos:self.parent.x-202,self.parent.y
    size:80,56
  DateInput:
    size:100,56
    text:"2017"
    id:year
    pos:self.parent.x-100,self.parent.y
  DateInput:
    size:50,56
    text:"06"
    id:month
    pos:self.parent.x,self.parent.y
  DateInput:
    size:50,56
    text:"03"
    id:day
    pos:self.parent.x+50,self.parent.y
  Button:
    id:nexBtn
    text:"Next"
    pos:self.parent.x+122,self.parent.y
    size:80,56

<Record>:
  time:time
  duration:duration
  job:job
  delete:delete
  add:add
  TimeInput:
    id:time
    size:100,56
    pos:self.parent.x,self.parent.y
  DurationInput:
    id:duration
    size:70,56
    pos:self.parent.x+100,self.parent.y
  JobInput:
    id:job
    size:360,56
    pos:self.parent.x+170,self.parent.y
  Button:
    id:add
    text:"+"
    markup:True
    color:[1,1,1,1]
    pos:self.parent.x+535,self.parent.y
    size:40,56
    #border:[0,0,0,0]
    background_color:[0,1,0,1]
    on_press:self.parent.Insert(*args)
  Button:
    id:delete
    text:"-"
    markup:True
    color:[1,1,1,1]
    pos:self.parent.x+575,self.parent.y
    size:40,56
    #border:[0,0,0,0]
    background_color:[1,0,0,1]
    on_press:self.parent.Delete(*args)

