<Menu>:
  export:export
  save:save
  add:add
  Button:
    id:export
    text:"Export"
    size_hint:None,None
    size:120,56
    pos:-120,0

  Button:
    id:save
    text:"Save"
    size_hint:None,None
    size:120,56
    pos:-250,0

  Button:
    id:add
    text:"Add"
    size_hint:None,None
    size:120,56
    pos:-380,0

<DaytimeLog>:
  timer:timer
  date1:date
  menu:menu
  log:log
  size_hint:None,1
  size:1000,1200
  canvas:
    Color:
      rgba:1,1,1,1
    Rectangle:
      size:self.size
      pos:0,0

  Timer:
    pos:self.parent.width/2,self.parent.height-88
    id:timer
  Date:
    pos:self.parent.width/2,self.parent.height-188
    id:date
  Widget:
    pos:self.parent.width/2,self.parent.height-288
    Label:
      text:"Time"
      pos:self.parent.x-310,self.parent.y
      color:0,0,0,1
      size:100,56
      text_size:100,56
      valign:'middle'
      font_size:"12sp"
      bold:True
    Label:
      text:"Hours"
      pos:self.parent.x-210,self.parent.y
      color:0,0,0,1
      size:70,56
      text_size:70,56
      valign:'middle'
      font_size:"12sp"
      bold:True
    Label:
      text:"Activity"
      pos:self.parent.x-140,self.parent.y
      color:0,0,0,1
      size:360,56
      text_size:360,56
      valign:'middle'
      font_size:"12sp"
      bold:True
  ScrollView:
    x:self.parent.width/2-self.width/2
    y:86
    size_hint:None,None
    width:620
    height:self.parent.height-374
    do_scroll_y:True
    do_scroll_x:False
    bar_width:5
    RelativeLayout:
      id:log
      size_hint:None,None
      width:615
      pos:0,self.parent.height-self.height
  Menu:
    x:self.parent.width-10
    y:10
    size_hint:None,None
    size:380,56
    id:menu
